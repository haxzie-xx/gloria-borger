{
  "name": "gloria-borger",
  "version": "1.0.0",
  "description": "A probot app to automate email sending and tweeting upon reviews through GitHub repo",
  "author": "Musthaq Ahamad <musthu.gm@gmail.com> (https://github.com/haxzie/gloria-borger)",
  "license": "ISC",
  "repository": "https://github.com/haxzie/gloria-borger.git",
  "homepage": "https://github.com/haxzie/gloria-borger",
  "bugs": "https://github.com/haxzie/gloria-borger/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "nodemailer": "^6.1.0",
    "nodemailer-smtp-transport": "^2.7.4",
    "probot": "^7.2.0",
    "probot-config": "^1.0.1"
  },
  "devDependencies": {
    "jest": "^24.0.0",
    "nock": "^10.0.0",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.2",
    "standard": "^12.0.1"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
